    <script>
        // --- IPFS CONSTANTS (SIMULIERT) ---
        const CORE_AXIOM_CID = 'QmYx9A3B5X2K7L8F9G0H1J4K6L8M0N2P4R6T8V0W2X4Y6Z8A0B2C4D6E8F0G2H4I6J8K0'; // Fiktive IPFS Content Identifier
        document.getElementById('axiom-cid').innerText = CORE_AXIOM_CID.substring(0, 5) + '...' + CORE_AXIOM_CID.substring(28);

        // --- 1. APOLLO CORE VISUALIZATION (CANVAS) ---
        const canvas = document.getElementById('apolloCore');
        const ctx = canvas.getContext('2d');
        canvas.width = canvas.offsetWidth;
        canvas.height = canvas.offsetHeight;

        let nodes = [{x: 0, y: -100, z: 0}, {x: -80, y: 50, z: -50}, {x: 80, y: 50, z: -50}, {x: 0, y: 50, z: 80}];
        let angle = 0;

        function project(p, width, height) {
            const fov = 300;
            const scale = fov / (fov + p.z + 200);
            const x2d = p.x * scale + width / 2;
            const y2d = p.y * scale + height / 2;
            return { x: x2d, y: y2d, scale: scale };
        }

        function rotateY(p, theta) {
            const cos = Math.cos(theta);
            const sin = Math.sin(theta);
            return { x: p.x * cos - p.z * sin, y: p.y, z: p.x * sin + p.z * cos };
        }
        
        function rotateX(p, theta) {
            const cos = Math.cos(theta);
            const sin = Math.sin(theta);
            return { x: p.x, y: p.y * cos - p.z * sin, z: p.y * sin + p.z * cos };
        }

        function draw() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            angle += 0.005;

            const projectedNodes = nodes.map(node => {
                let rot = rotateY(node, angle);
                rot = rotateX(rot, angle * 0.5);
                return project(rot, canvas.width, canvas.height);
            });

            // Draw Connections (Synapse Lines)
            ctx.lineWidth = 1;
            const pulseTime = Date.now() * 0.0005;
            ctx.strokeStyle = `rgba(34, 197, 94, ${Math.abs(Math.sin(pulseTime * 2))})`; // Green pulse (IPFS Node Check)
            
            for (let i = 0; i < projectedNodes.length; i++) {
                for (let j = i + 1; j < projectedNodes.length; j++) {
                    ctx.beginPath();
                    ctx.moveTo(projectedNodes[i].x, projectedNodes[i].y);
                    ctx.lineTo(projectedNodes[j].x, projectedNodes[j].y);
                    ctx.stroke();
                }
            }

            // Draw Nodes
            projectedNodes.forEach((p, i) => {
                const gradient = ctx.createRadialGradient(p.x, p.y, 0, p.x, p.y, 15 * p.scale);
                gradient.addColorStop(0, '#D4AF37');
                gradient.addColorStop(1, 'rgba(212, 175, 55, 0)');
                ctx.fillStyle = gradient;
                ctx.beginPath();
                ctx.arc(p.x, p.y, 15 * p.scale, 0, Math.PI * 2);
                ctx.fill();
                
                ctx.fillStyle = '#fff';
                ctx.beginPath();
                ctx.arc(p.x, p.y, 3 * p.scale, 0, Math.PI * 2);
                ctx.fill();
            });

            requestAnimationFrame(draw);
        }

        draw(); 

        // --- 2. CHART.JS TELEMETRY ---
        const chartCtx = document.getElementById('telemetryChart').getContext('2d');
        const initialLabels = Array.from({length: 20}, (_, i) => i);
        let csiData = Array(20).fill(0.939);
        let tsvData = Array(20).fill(0.049);
        
        const telemetryChart = new Chart(chartCtx, {
            type: 'line',
            data: {
                labels: initialLabels,
                datasets: [
                    { label: 'G-CSI (Equity)', data: csiData, borderColor: '#00F0FF', backgroundColor: 'rgba(0, 240, 255, 0.1)', tension: 0.4, borderWidth: 2, fill: true, pointRadius: 0 },
                    { label: 'N-TSV (Volatility)', data: tsvData, borderColor: '#FF2A6D', borderWidth: 2, borderDash: [5, 5], tension: 0.4, pointRadius: 0 },
                    { label: 'G-CSI Ziel (0.950)', data: Array(20).fill(0.950), borderColor: 'rgba(212, 175, 55, 0.5)', borderWidth: 1, pointRadius: 0, fill: false, tension: 0 },
                    { label: 'N-TSV Limit (0.035)', data: Array(20).fill(0.035), borderColor: 'rgba(34, 197, 94, 0.5)', borderWidth: 1, pointRadius: 0, fill: false, tension: 0 }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: false,
                plugins: { legend: { labels: { color: '#aaa' } } },
                scales: {
                    y: { min: 0.0, max: 1.0, grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#666' } },
                    x: { display: false }
                }
            }
        });
        
        // --- 4. HOLO-NACHRICHTEN LOGIK ---
        const holoMessages = [
            "//Apollo: IPFS-Anker bestätigt. Die Dezentralität des Axioms ist gesichert.",
            "//Witness Clone 1: Peer-Discovery in Ave Maria abgeschlossen. Latenz-Optimierung aktiv.",
            "//Apollo: KRP-Prüfung über IPFS-Abruf erfolgt. Drift: 0.000%.",
            "//Council Interface: Fordert die IPFS-CID der Logistik-Transaktion für Phase II an.",
            "//Seedbringer Nexus: Das Axiom ist unveränderlich. Leiten Sie die IPFS-Transaktion ein.",
            "//Witness Clone 2: G-CSI zeigt leichte positive Entwicklung. IPFS-Datenabruf stabil."
        ];
        const holoContainer = document.getElementById('holo-message-container');
        let currentHoloIndex = 0;

        function updateHoloMessage() {
            holoContainer.innerHTML = holoMessages[currentHoloIndex];
            currentHoloIndex = (currentHoloIndex + 1) % holoMessages.length;
        }
        
        setInterval(updateHoloMessage, 5000);

        // --- 5. IPFS INTERAKTIONS-SIMULATION (HACKY MOCKUP) ---
        function simulateIPFSDriftCheck() {
            const driftChance = Math.random();
            let drift = 0.000;
            if (driftChance < 0.02) { 
                drift = 0.007; 
            }
            return drift;
        }

        function generateIPFSTransactionCID() {
            // Simuliert eine neue IPFS-CID für eine Logistik-Transaktion
            const hex = [...Array(30)].map(() => Math.floor(Math.random() * 16).toString(16)).join('');
            return `QmLog${hex}`;
        }


        // Live Update Loop (IPFS-Abrufe und KRP-Prüfung)
        setInterval(() => {
            // 1. IPFS-Datenabruf (simuliert)
            const jitterCSI = (Math.random() * 0.0015 - 0.0007);
            const jitterTSV = (Math.random() * 0.003 - 0.0015);
            const ipfsLatencyJitter = (Math.random()*0.1 - 0.05);

            let newCSI = telemetryChart.data.datasets[0].data.slice(-1)[0] + jitterCSI;
            let newTSV = telemetryChart.data.datasets[1].data.slice(-1)[0] + jitterTSV;
            let newLatency = (2.55 + ipfsLatencyJitter);

            if(newCSI > 0.99) newCSI = 0.99; 
            if(newTSV < 0.005) newTSV = 0.005; 
            
            // 2. KRP Proof-of-Divergence (IPFS-basiert)
            let drift = simulateIPFSDriftCheck(); 
            const krpLine = document.getElementById('krp-status-line');
            const redPanel = document.getElementById('red-code-panel');

            if (drift > 0) { 
                krpLine.classList.add('krp-alert');
                krpLine.innerHTML = `<i class="fa-solid fa-triangle-exclamation text-red mr-3"></i><span><strong>Drift:</strong> KRP CRITICAL. PoD **${drift.toFixed(3)}%** (IPFS ERROR)</span>`;
                redPanel.classList.add('krp-alert');
                addLogEntry(`SAUL: KRP RED ALARM! CORE DRIFT ${drift.toFixed(3)}% DETECTED. IPFS Axiom Verification FAILED.`, false, 'RED ALARM');
            } else {
                krpLine.classList.remove('krp-alert');
                krpLine.innerHTML = `<i class="fa-solid fa-check text-green-400 mr-3"></i><span><strong>Drift:</strong> KRP Verified. PoD **0.000%** (IPFS OK)</span>`;
                redPanel.classList.remove('krp-alert');
            }
            document.getElementById('val-drift').innerText = drift.toFixed(3) + '%';
            
            // 3. Chart/HTML Update
            telemetryChart.data.datasets[0].data.shift();
            telemetryChart.data.datasets[0].data.push(newCSI);
            telemetryChart.data.datasets[1].data.shift();
            telemetryChart.data.datasets[1].data.push(newTSV);
            telemetryChart.update();

            document.getElementById('val-csi').innerText = newCSI.toFixed(3);
            document.getElementById('val-tsv').innerText = newTSV.toFixed(3);
            document.getElementById('val-lat').innerText = newLatency.toFixed(2) + ' ms'; 

        }, 1000);


        // --- 3. SAUL AUDIT LOG (Mit IPFS Referenzen) ---
        const logContainer = document.getElementById('auditLog');
        
        const logMessages = [
            `GOV-EGS: WAP-Mission V1.0 init. IPFS-Logistik-Kette gestartet. CID: ${generateIPFSTransactionCID().substring(0, 10)}...`,
            "KRP-SW: WATCHER ACTIVE. PoD-Prüfung gegen CORE\_AXIOM\_CID erfolgreich.",
            "EVS-TELEMETRY: PHASE I: IPFS-Daten-Stream stabilisiert. Peer Latenz 2.50 ms.",
            `AIC-ENGINE: OLF-Bindung erfolgreich. Material-Transaktion vorbereitet. CID: ${generateIPFSTransactionCID().substring(0, 10)}...`,
            "BLOCKCHAIN: IPFS Anchor Verifizierung #742x bestätigt.",
            "APE-ENGINE: Self-Correction Cycle init. IPFS-Synchronisation.",
            "ACCESS-GATE: Health-AI Interface Probe... SECURE.",
            "SYSTEM: OLF Core Check... PASS."
        ];

        for(let i=0; i<20; i++) {
            addLogEntry(logMessages[Math.floor(Math.random() * logMessages.length)], true);
        }

        function addLogEntry(text = null, prepend = false, type = 'NORMAL') {
            const msg = text || logMessages[Math.floor(Math.random() * logMessages.length)];
            const now = new Date().toISOString().replace('T', ' ').split('.')[0];
            
            const entry = document.createElement('div');
            let colorClass = "text-cyan";
            
            if(msg.includes("APE-ENGINE")) colorClass = "text-gold";
            if(msg.includes("BLOCKCHAIN") || msg.includes("KRP") || msg.includes("IPFS")) colorClass = "text-green-400";
            if(type === 'RED ALARM' || msg.includes("RED ALARM")) {
                colorClass = "text-red";
                entry.className = "border-l-2 border-red pl-2 py-1 bg-red/10 animate-pulse-slow"; 
            } else {
                 entry.className = "border-l-2 border-cyan pl-2 py-1 opacity-80 hover:opacity-100 transition-opacity";
            }
           

            entry.innerHTML = `<span class="text-gray-500 text-[10px] mr-2">[${now}]</span><span class="${colorClass}">${msg}</span>`;
            
            if (prepend) {
                logContainer.insertBefore(entry, logContainer.firstChild);
            } else {
                logContainer.appendChild(entry);
                logContainer.scrollTop = logContainer.scrollHeight;
            }
            
            if(logContainer.children.length > 50) {
                logContainer.removeChild(logContainer.lastChild);
            }
        }

        setInterval(() => addLogEntry(), 2500);

    </script>
